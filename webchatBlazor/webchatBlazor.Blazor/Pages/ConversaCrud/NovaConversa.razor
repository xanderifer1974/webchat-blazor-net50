@page "/novaconversa"

<h3>NovaConversa</h3>
<EditForm Model="@Conversa" OnValidSubmit="@CriaConversa">
    <DataAnnotationsValidator />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="NomeCliente" class="control-label">Nome Cliente</label>
                <InputSelect class="form-control" Id="Status" @bind-Value="@Conversa.NomeCliente">
                    @foreach (var item in NomesClientes)
                    {
                        <option value="@item">@item</option>
                    }
                </InputSelect>
            </div>
            <div class="form-group">
                <label for="Pergunta" class="control-label">Pergunta</label>
                <InputTextArea id="Pergunta" class="form-control" @bind-Value="@Conversa.Pergunta" rows="4" />
                <ValidationMessage For="@(() => Conversa.Pergunta)" />
            </div>
            <div class="form-group">
                <label for="Resposta" class="control-label">Resposta</label>
                <InputTextArea id="Resposta" class="form-control" @bind-Value="@Conversa.Resposta" rows="4" />
                <ValidationMessage For="@(() => Conversa.Resposta)" />
            </div>
            <div class="form-group">
                <label for="Status" class="control-label">Status</label>
                <InputSelect class="form-control" id="Status" @bind-Value="@Conversa.Status">
                    @foreach (var item in ListaStatus)
                    {
                        <option value="@item">@item</option>
                    }
                </InputSelect>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-success"  value="Salvar" />
                <input type="button" class="btn btn-outline-danger" @onclick="@Cancela" value="Cancelar" />
            </div>
        </div>
    </div>
</EditForm>

<AlertComponent Model="@Conversa.Alert"></AlertComponent>

