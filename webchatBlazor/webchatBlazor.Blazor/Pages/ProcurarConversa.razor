@page "/conversa"

<h3>Procurar Conversa</h3>

<ProcuraItemComponent OnSearch="HandlerSearch" 
    TituloBotao1="Procurar Conversa por Pergunta" NomeBotaoLink="Inserir Conversa" NomeLink="/novaconversa"></ProcuraItemComponent>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Pergunta</th>
            <th>Resposta</th>
            <th>Status Conversa</th>
            <th>Editar</th>
            <th>Excluir</th>
        </tr>
    </thead>
    <tbody>
        @if (Conversas != null && Conversas.Count() > 0)
        {
            @foreach (var conversa in Conversas)
            {
                <ConversaItemComponent Conversa="conversa"></ConversaItemComponent>
            }
        }
        else
        {
            <tr>
                <td id="nao-encontrado" colspan="6">
                    Não foi possível encontrar a conversa
                </td>
            </tr>
        }
    </tbody>
</table>