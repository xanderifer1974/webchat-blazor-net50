@if(this.Conversa != null)
{
    <tr>
        <td>@Conversa.IdChat</td>        
        <td>@(new MarkupString(Conversa.Pergunta))</td>        
        <td>@(new MarkupString(Conversa.Resposta))</td>
        <td>@Conversa.Status</td>
        <td><a href='/editarConversa/@Conversa.IdChat'><span class="oi oi-pencil" aria-hidden="true"></span></a></td>
        <td><a href='/deletarconversa/@Conversa.IdChat'><span class="oi oi-trash" aria-hidden="true"></span></a></td>
    </tr>
}
